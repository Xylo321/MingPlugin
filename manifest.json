{
    "manifest_version": 2,
    "name": "MingPlugin",
    "description": "浏览器反爬辅助分析",
    "version": "1.0.3",
    "options_page": "option/utils.html",

    "browser_action": {
        "default_icon": "logo.png",
        "default_title": "浏览器反爬辅助分析",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "cache.js"
        ]
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": [
            "jquery.js"
        ],
        "all_frames": true,
        "run_at": "document_end"
    }],

    "permissions": [
        "history",
        "cookies",
        "proxy",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "http://*/*",
        "https://*/*"
    ]
}
